<div class='p-5'>
<h1>Lista de Usuarios</h1>

<table class="table">
        <tr>
            <th>ID  </th>
            <th>Nombre</th>
        </tr>

    <% @usuarios.each do |usuario| %>

        <tr>
            <td><%= usuario.id %></td>
            <td><%= link_to usuario.nombre_usuario, usuario_path(usuario) %></td>

            <td class="text-end">
                <%= link_to editar_usuario_path(usuario), class: 'btn btn-warning' do %>
                <i class="fas fa-edit"></i>
                    Editar
                <% end %>

                <%= link_to usuario_path(usuario), class: 'btn btn-danger', method: :delete, data: { confirm: '¿Está seguro que quiere eliminar el registro?' } do %>
                <i class="fas fa-eraser"></i>
                    Borrar
                <% end %>
            </td>
        </tr>
        
    <% end %>
</table>
</div>